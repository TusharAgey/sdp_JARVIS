<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="jarvis.jarvis.HelpOfTime$PlaceholderFragment">


    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Password!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/progressBar3"
        android:layout_width="300dp"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="75" />
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:text="while signing up, Please enter these two values so that I can create your password as number1 + number2 + Date + Month
        Eg:- if its 01/02/2017 today, and you have entered 2 numbers as 5 and 6, then the password is 1 + 2 + 5 + 6 =14        "
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
